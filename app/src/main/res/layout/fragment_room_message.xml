<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="roomMessageViewModel" type="com.example.mobv.viewModels.RoomMessageViewModel" />
        <variable name="text" type="String" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e2e2e2"
        tools:context=".fragments.RoomMessageFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            android:layout_below="@+id/bar_layout"
            android:layout_above="@+id/bottom" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gifWindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:visibility="gone">

            <fragment
                android:id="@+id/gif_fragment"
                android:name="com.example.mobv.fragments.GifFragment"
                android:layout_width="match_parent"
                android:layout_height="312dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:padding="5dp">

            <EditText
                android:id="@+id/messageContent"
                android:layout_width="300dp"
                android:layout_height="84dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_send"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="What's on your mind?"
                android:text="@{text}" />

            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/gifButton"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_action_name"
                android:onClick="@{() -> roomMessageViewModel.sendMessage(messageContent.getText().toString())}"
                android:tint="#037ef3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gifButton"
                android:onClick="@{() -> roomMessageViewModel.readMessages()}"
                android:layout_marginTop="-40dp"
                android:background="@android:drawable/ic_menu_rotate" />

            <ImageButton
                android:id="@+id/gifButton"
                style="@android:style/Widget.Holo.Light.ImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/messageContent"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="347dp"
                android:layout_marginBottom="44dp"
                android:layout_toStartOf="@+id/messageContent"
                android:background="#FFFFFF"
                android:src="@android:drawable/ic_menu_add" />


