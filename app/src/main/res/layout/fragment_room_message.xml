<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="roomMessageViewModel" type="com.example.mobv.viewModels.RoomMessageViewModel" />
        <variable name="text" type="String" />
        <variable name="sendMessageListener" type="com.example.mobv.fragments.RoomMessageFragment.OnSendMessageListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e2e2e2"
        tools:context=".fragments.RoomMessageFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            android:layout_below="@+id/bar_layout"
            android:layout_above="@+id/bottom" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gifWindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:visibility="gone">

            <fragment
                android:id="@+id/gif_fragment"
                android:name="com.example.mobv.fragments.GifFragment"
                android:layout_width="match_parent"
                android:layout_height="312dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:id="@+id/bottom"
            android:background="#fff"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/gifButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:background="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/messageContent"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:layout_toLeftOf="@+id/btn_send"
                android:background="@android:color/transparent"
                android:hint="Napíš správu..."
                android:text="@{text}" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_name"
                android:id="@+id/btn_send"
                android:onClick="@{() -> sendMessageListener.sendMessage(messageContent.getText().toString())}"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />


        </RelativeLayout>


    </RelativeLayout>
</layout>